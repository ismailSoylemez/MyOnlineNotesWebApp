@using MyOnlineNotesEntities.ValueObject
@model LoginViewModel

@{
    ViewBag.Title = "Giriş Sayfası";
}


<link href="~/Content/Login-Register.css" rel="stylesheet" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/jquery-3.3.1.min.js"></script>


<script>
    //sayfa yüklendiğinde footer elementini gizle
    $(function () {

        $("footer").parent.hide();

    });
</script>
<!------ Include the above in your HEAD tag ---------->

<style type="text/css">
    .validation-summary-errors {
        border: 2px dotted black;
        background-color: brown;
        border-radius: 8px;
    }

        .validation-summary-errors ul {
            list-style: none;
            padding: 6px;
            color: aliceblue
        }
</style>

@using (Html.BeginForm())
{
    <div class="login-wrap">
        <div class="login-html">
            <input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">Giriş Yap</label>
            <input id="tab-2" type="radio" name="tab" class="for-pwd"><label for="tab-2" class="tab"></label>
            <div class="login-form">
                <div class="sign-in-htm">

                    @Html.ValidationSummary(false)

                    @if (ViewBag.SetLink!=null)
                    {
                        <a href="@ViewBag.SetLink" class="btn btn-primary">Activate</a>
                    }

                    <div class="group">
                        <label for="user" class="label">Username</label>
                        @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "Kullanıcı Adınız" })

                    </div>
                    <div class="group">
                        <label for="pass" class="label">Password</label>
                        @Html.TextBoxFor(m => m.Password, new { @class = "form-control", placeholder = "Şifreniz", type = "password" })
                    </div>
                    <div class="group">
                        <input type="submit" class="button" value="Giriş Yap">
                    </div>
                    <div class="hr"></div>
                </div>
            </div>
        </div>
    </div>

}

